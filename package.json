{
  "name": "general-chatgpt-server",
  "version": "1.0.0",
  "description": "A production-grade Express.js API server with TypeScript",
  "main": "backend/server.ts",
  "scripts": {
    "// === Production Commands ===": "",
    "start": "NODE_ENV=production node dist/server.js",
    "// === Development Commands ===": "",
    "dev": "npm run watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon backend/server.ts",
    "watch-ts": "tsc -w",
    "// === Build Commands ===": "",
    "build": "npm run clean && npm run build-ts",
    "build-ts": "tsc",
    "clean": "rm -rf dist",
    "// === Debug Commands ===": "",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "// === Quality Checks ===": "",
    "lint": "eslint \"backend/**/*.ts\"",
    "lint:fix": "eslint \"backend/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --reporters='default' --reporters='jest-junit'",
    "// === Deployment Commands ===": "",
    "build:production": "npm install --production=false && npm run build && npm ci",
    "// === Lambda Commands ===": "",
    "lambda:local": "npm run build && node -e \"require('./dist/lambda-local.js').runLocal()\"",
    "lambda:package": "npm run build && serverless package",
    "lambda:deploy": "npm run build && serverless deploy"
  },
  "keywords": [
    "express",
    "typescript",
    "api",
    "server",
    "openai",
    "chatgpt"
  ],
  "author": "thasup",
  "license": "ISC",
  "dependencies": {
    "@scalar/express-api-reference": "^0.6.2",
    "colors": "^1.4.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "openai": "^4.85.1",
    "querystring": "^0.2.1",
    "request": "^2.88.2",
    "serverless-http": "^3.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/colors": "^1.2.4",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.4",
    "@types/node": "^22.15.2",
    "@types/request": "^2.48.8",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.9",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.3.2",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=22"
  }
}
