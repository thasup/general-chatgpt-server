{
  "name": "general-chatgpt-server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "// === Production Commands ===": "",
    "start": "NODE_ENV=production node dist/server.js",
    "build": "npm run clean && npm run build-ts && npm run copy-files",
    "serve": "NODE_ENV=production node dist/server.js",

    "// === Development Commands ===": "",
    "dev": "npm run watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",

    "// === Build Commands ===": "",
    "build-ts": "tsc",
    "clean": "rm -rf dist",
    "copy-files": "mkdir -p dist/config && cp -r backend/config/* dist/config/ 2>/dev/null || true",

    "// === Debug Commands ===": "",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",

    "// === Quality Checks ===": "",
    "lint": "eslint \"backend/**/*.ts\"",
    "lint:fix": "eslint \"backend/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --reporters='default' --reporters='jest-junit'",

    "// === Deployment Commands ===": "",
    "build:production": "npm ci --include=dev && NODE_ENV=production npm run build && npm ci --omit=dev",
    "postinstall": "npm run build"
  },
  "keywords": [],
  "author": "thasup",
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "openai": "^4.85.1",
    "querystring": "^0.2.1",
    "request": "^2.88.2",
    "spotify-web-api-node": "^5.0.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/colors": "^1.2.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/request": "^2.48.8",
    "@types/spotify-web-api-node": "^5.0.7",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
